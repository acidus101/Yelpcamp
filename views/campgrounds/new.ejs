<% include ../partials/header %>
<div class="container">
    <h1 class="text-center">Create A New Campground</h1>
    <div style="width: 40%; margin: 0 auto;" class="mt-3">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input type="text" class="form-control"  id="name" name = "name" placeholder="Enter Name">
            </div>
            <div class="form-group">
                    <input type="number" class="form-control"  id="name" name = "price" placeholder="price" min = "0.01" step="0.01">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name = "image" id="campgroundImage" placeholder="Image URL">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name = "description" id="Description" placeholder="Description">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit!</button>
        </form>
        <a href="/campgrounds">Go Back!!</a>   
    </div>
<hr>
</div>
<% include ../partials/footer %>