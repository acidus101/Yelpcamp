<% include ../partials/header %>
<div class="container">
    <h1 class="text-center">Edit <%= campground.name %></h1>
    <div style="width: 40%; margin: 0 auto;" class="mt-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control"  id="name" name = "campground[name]" value = "<%= campground.name %>">
            </div>
            <div class="form-group">
                    <input type="number" class="form-control"  id="name" name = "campground[price]"
                    value = "<%= campground.price %>" min = "0.01" step="0.01">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name = "campground[image]" id="campgroundImage" value = "<%= campground.image %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name = "campground[description]" id="Description" value = "<%= campground.description %>">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Update!!</button>
        </form>
        <a href="/campgrounds">Go Back!!</a>   
    </div>
<hr>
</div>
<% include ../partials/footer %>